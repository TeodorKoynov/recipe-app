@model RegisterViewModel
@{ 
    ViewData["Title"] = "Register";
}

<div>
    <h1>Register</h1>
    <h4>Create a new account</h4>
</div>
<form method="post" asp-controller="Account" asp-action="Register">
    <div class="form-group">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="@Model.Email"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.Email" />
                <span class="text-danger" asp-validation-for="@Model.Email"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="@Model.Password"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.Password" />
                <span class="text-danger" asp-validation-for="@Model.Password"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="@Model.ConfirmPassword"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.ConfirmPassword" />
                <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
            </div>
        </div>
    </div>
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <div class="col-md-2 col-md-10">
            <button class="btn" type="submit">Register</button>
        </div>
    </div>
</form>