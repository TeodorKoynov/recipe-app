@model AddIngredientViewModel

<form asp-controller="Recipe" asp-action="AddIngredient" asp-route-RecipeId="@Model.RecipeId" method="post">
    <div class="container">
        <h1>Add Ingredient</h1>
        <div class="form-group">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="@Model.Ingredient.Name"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Ingredient.Name" />
                    <span class="text-danger" asp-validation-for="@Model.Ingredient.Name"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="@Model.Ingredient.Quantity"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Ingredient.Quantity" />
                    <span class="text-danger" asp-validation-for="@Model.Ingredient.Quantity"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="@Model.Ingredient.Unit"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Ingredient.Unit" />
                    <span class="text-danger" asp-validation-for="@Model.Ingredient.Unit"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 col-md-10">
                <button class="btn btn-success" type="submit">Add</button>
                <a class="btn btn-outline-dark" asp-controller="Recipe" asp-action="View" asp-route-id="@Model.RecipeId">Back</a>
            </div>
        </div>
    </div>
</form>